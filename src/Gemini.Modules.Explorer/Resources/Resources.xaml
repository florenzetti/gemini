<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:converters="clr-namespace:Gemini.Modules.Shell.Converters;assembly=Gemini"
                    xmlns:controls="clr-namespace:Gemini.Modules.Explorer.Controls">
    <converters:NullableValueConverter x:Key="NullableValueConverter" />
    <controls:TreeItemTemplateSelector x:Key="TreeItemTemplateSelector">
        <controls:TreeItemTemplateSelector.TreeItemTemplate>
            <DataTemplate>
                <DockPanel>
                    <Image Source="{Binding IconSource, Converter={StaticResource NullableValueConverter}}" Stretch="None" Margin="10 0 5 0" />
                    <TextBlock Text="{Binding Path=Name}" />
                </DockPanel>
            </DataTemplate>
        </controls:TreeItemTemplateSelector.TreeItemTemplate>
        <controls:TreeItemTemplateSelector.DefaultTemplate>
            <DataTemplate>
                <DockPanel>
                    <Image Source="{Binding IconSource, Converter={StaticResource NullableValueConverter}}" Stretch="None" Margin="10 0 5 0" />
                    <TextBlock Text="{Binding Path=Name}" />
                </DockPanel>
            </DataTemplate>
        </controls:TreeItemTemplateSelector.DefaultTemplate>
    </controls:TreeItemTemplateSelector>
</ResourceDictionary>
