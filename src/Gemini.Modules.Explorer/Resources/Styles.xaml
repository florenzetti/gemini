<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:controls="clr-namespace:Gemini.Modules.MainMenu.Controls;assembly=Gemini">
    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="pack://application:,,,/Gemini;component/Modules/MainMenu/Resources/Styles.xaml"/>
        
        <ResourceDictionary>
            <Style x:Key="ContextMenu" TargetType="{x:Type controls:ContextMenuEx}">
                <Style.Triggers>
                    <Trigger Property="HasItems" Value="False">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </Trigger>
                </Style.Triggers>
            </Style>

            <PopupAnimation x:Key="{x:Static SystemParameters.MenuPopupAnimationKey}">None</PopupAnimation>
        </ResourceDictionary>
        
    </ResourceDictionary.MergedDictionaries>
</ResourceDictionary>
